{
  "name": "mycsc",
  "version": "1.3.5",
  "description": "MYCSC - Modern Database Constructor",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:server": "tsc -p tsconfig.main.json && node dist/main/server/server.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "start": "node dist/main/server/server.js",
    "start:electron": "electron .",
    "start:prod": "NODE_ENV=production node dist/main/server/server.js",
    "web": "node dist/main/server/server.js",
    "test": "vitest",
    "dist": "npm run build && electron-builder --win",
    "dist:win": "npm run build && electron-builder --win --x64",
    "docker:build": "docker build -t mycsc .",
    "docker:run": "docker run -p 3001:3001 -p 3002:3002 -v mycsc_data:/app/data mycsc",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "build": {
    "appId": "com.mycsc.database",
    "productName": "MYCSC Database",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build",
        "to": "build"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "MYCSC Database"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "database",
    "sql",
    "electron",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "pptxgenjs": "^4.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@codemirror/lang-sql": "^6.5.0",
    "@types/nodemailer": "^6.4.17",
    "@uiw/react-codemirror": "^4.21.0",
    "codemirror": "^6.0.0",
    "compression": "^1.8.1",
    "express": "^4.18.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "nodemailer": "^6.9.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io": "^4.6.0",
    "socket.io-client": "^4.6.0",
    "uuid": "^9.0.0"
  }
}
