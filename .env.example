# ============================================
# MYCSC - Environment Variables
# Copy this file to .env and configure
# ============================================

# Server Configuration
NODE_ENV=production
PORT=3001
TCP_PORT=3002

# Data Directory
DATA_DIR=/app/data

# Security
JWT_SECRET=your-super-secret-key-change-this-in-production

# Admin User (created on first start)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Optional: Database limits
MAX_CONNECTIONS=100
QUERY_TIMEOUT=30000
MAX_QUERY_SIZE=1048576

# Optional: Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# Optional: Logging
LOG_LEVEL=info

# ============================================
# OAuth Configuration
# ============================================

# Google OAuth (https://console.developers.google.com/)
# Create OAuth 2.0 credentials
# Authorized redirect URI: http://31.129.98.56/api/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (https://github.com/settings/developers)
# Create OAuth App
# Authorization callback URL: http://31.129.98.56/api/auth/github/callback
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ============================================
# Email Configuration (Mail.ru SMTP)
# ============================================
# Email: mycsc@mail.ru
# Go to Mail.ru settings -> Security -> App passwords
# Generate a new app password for MYCSC
EMAIL_PASSWORD=your-mailru-app-password
EMAIL_FROM=mycsc@mail.ru
